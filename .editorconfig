# http://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8

[*.java]
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true

[*.xml]
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true

[{*.yml,*.yaml}]
indent_style = space
indent_spaces = 2
trim_trailing_whitespace = true
insert_final_newline = true